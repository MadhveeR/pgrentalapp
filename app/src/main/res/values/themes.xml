    <style name="text_19" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="edit_16" parent="Widget.AppCompat.EditText">
        <item name="android:drawablePadding">@dimen/_5sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/_8sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:background">@drawable/custom_border</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="button_16" parent="Widget.AppCompat.EditText">
        <item name="android:textAlignment">center</item>
       <item name="android:layout_gravity">center</item>
       <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginHorizontal">@dimen/_15sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

